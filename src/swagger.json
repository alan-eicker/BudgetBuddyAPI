{
  "swagger": "2.0",
  "info": {
    "title": "Budget Buddy API",
    "version": "1.0.0"
  },
  "schemes": ["http"],
  "basePath": "/api/v1",
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/expense": {
      "get": {
        "summary": "Gets all expenses",
        "operationId": "GetAllExpenses",
        "responses": {
          "200": {
            "description": "Successful: Returns list of all expenses",
            "schema": {
              "$ref": "#/definitions/getAllExpensesResponse"
            }
          },
          "500": {
            "description": "Unsuccessful: Returns error response",
            "schema": {
              "$ref": "#/definitions/generalErrorResponse"
            }
          }
        },
        "tags": ["expense"]
      },
      "post": {
        "summary": "Creates an expense",
        "operationId": "PostExpense",
        "parameters": [
          {
            "required": true,
            "name": "Body",
            "in": "body",
            "description": "Expense request body",
            "schema": {
              "$ref": "#/definitions/postExpenseBody"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful: Returns id of created expense",
            "schema": {
              "$ref": "#/definitions/postExpenseResponse"
            }
          },
          "500": {
            "description": "Unsuccessful: Returns error response",
            "schema": {
              "$ref": "#/definitions/generalErrorResponse"
            }
          }
        },
        "tags": ["expense"]
      }
    },
    "/expense/{expenseId}": {
      "delete": {
        "summary": "Deletes an expense",
        "operationId": "DeleteExpense",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Expense id to delete",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful: Returns id of deleted expense",
            "schema": {
              "$ref": "#/definitions/deleteExpenseResponse"
            }
          },
          "500": {
            "description": "Unsuccessful: Returns error response",
            "schema": {
              "$ref": "#/definitions/generalErrorResponse"
            }
          }
        },
        "tags": ["expense"]
      }
    }
  },
  "definitions": {
    "getAllExpensesResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/expenseItem"
          }
        }
      }
    },
    "postExpenseBody": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "postExpenseResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "created_id": {
              "type": "integer"
            }
          }
        }
      }
    },
    "deleteExpenseResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "deleted_id": {
              "type": "integer"
            }
          }
        }
      }
    },
    "generalErrorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "object",
          "properties": {
            "code": {
              "type": "integer"
            },
            "message": {
              "type": "string"
            }
          }
        }
      }
    },
    "expenseItem": {
      "type": "object",
      "properties": {
        "expense_id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
